@{
}
<link rel="stylesheet" href="~/css/Website/SanPhamSale.css" />

<header class="sale-banner">
    <div class="container">
        <h1>FLASH SALE - GIẢM ĐẾN 50%</h1>
        <p>Săn ngay trước khi kết thúc!</p>
        <div class="countdown-timer">
            <div class="countdown-unit">15<span>NGÀY</span></div>
            <div class="countdown-unit">04<span>GIỜ</span></div>
            <div class="countdown-unit">30<span>PHÚT</span></div>
            <div class="countdown-unit">55<span>GIÂY</span></div>
        </div>
    </div>
</header>

<main class="container">

    <div class="filter-sort-bar">
        <div class="sale-filter">
            <label style="font-weight: 600;">Lọc nhanh:</label>
            <button class="active">Tất cả</button>
            <button>Giảm 50%</button>
            <button>Giảm 30%</button>
            <button>Giảm dưới 30%</button>
        </div>

        <div class="sort-options">
            <label for="sort-by">Sắp xếp theo:</label>
            <select id="sort-by" style="padding: 5px 10px; border-radius: 4px;">
                <option value="popular">Phổ biến nhất</option>
                <option value="price-asc">Giá: Thấp → Cao</option>
                <option value="price-desc">Giá: Cao → Thấp</option>
                <option value="discount">Phần trăm giảm</option>
            </select>
        </div>
    </div>

    <div class="product-grid">

        <div class="product-card">
            <span class="sale-tag">GIẢM 50%</span>
            <img src="https://via.placeholder.com/300x200?text=SALE+ADIDAS+50" alt="Giày Adidas Giảm 50%">
            <div style="padding: 0 10px;">
                <h3><a href="#">Adidas ZX 4000 Retro</a></h3>
                <p style="font-size: 0.9em; color: #777;">Chỉ còn 30 sản phẩm</p>
                <div class="prices">
                    <span class="old-price">3.980.000 VNĐ</span>
                    <span class="new-price">1.990.000 VNĐ</span>
                </div>
                <a href="#" class="btn-add">MUA NGAY</a>
            </div>
        </div>

        <div class="product-card">
            <span class="sale-tag" style="background-color: var(--primary-color);">GIẢM 30%</span>
            <img src="https://via.placeholder.com/300x200?text=NIKE+OFF+30" alt="Giày Nike Giảm 30%">
            <div style="padding: 0 10px;">
                <h3><a href="#">Nike Air Max Pacer</a></h3>
                <p style="font-size: 0.9em; color: #777;">Còn hàng</p>
                <div class="prices">
                    <span class="old-price">2.800.000 VNĐ</span>
                    <span class="new-price" style="color: var(--primary-color);">1.960.000 VNĐ</span>
                </div>
                <a href="#" class="btn-add">MUA NGAY</a>
            </div>
        </div>

        <div class="product-card">
            <span class="sale-tag">GIẢM 50%</span>
            <img src="https://via.placeholder.com/300x200?text=PUMA+RS-X+50" alt="Giày Puma Giảm 50%">
            <div style="padding: 0 10px;">
                <h3><a href="#">Puma RS-X Pop</a></h3>
                <p style="font-size: 0.9em; color: #777;">Sắp hết hàng!</p>
                <div class="prices">
                    <span class="old-price">1.500.000 VNĐ</span>
                    <span class="new-price">750.000 VNĐ</span>
                </div>
                <a href="#" class="btn-add">MUA NGAY</a>
            </div>
        </div>

        <div class="product-card">
            <span class="sale-tag" style="background-color: var(--primary-color);">GIẢM 20%</span>
            <img src="https://via.placeholder.com/300x200?text=NEW+BALANCE+OFF+20" alt="Giày New Balance Giảm 20%">
            <div style="padding: 0 10px;">
                <h3><a href="#">New Balance 997H</a></h3>
                <p style="font-size: 0.9em; color: #777;">Còn hàng</p>
                <div class="prices">
                    <span class="old-price">2.200.000 VNĐ</span>
                    <span class="new-price" style="color: var(--primary-color);">1.760.000 VNĐ</span>
                </div>
                <a href="#" class="btn-add">MUA NGAY</a>
            </div>
        </div>

    </div>

</main>
